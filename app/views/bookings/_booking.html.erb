<div class="card inner_card px-4 py-2 mb-3">
  <div class="bg-top row py-1 px-2">
    <div class="col-7 mt-2">
      <p class="h3 mb-5"><%= booking.tour.tour_name %></p>
      <p class="mt-3"><%= l(booking.tour.date_begin, format: :long) %> - <%= l(booking.tour.date_end, format: :long) %></p>
    </div>
    <div class="col-5 d-flex justify-content-end align-items-center">
      <img class="rounded-circle" src="https://dummyimage.com/100x100/55595c/fff" />
    </div>
  </div>
  <div class="row py-2">
    <p class="desc"><%= booking.tour.description %></p>
  </div>
  <div class="row py-2 d-flex justify-content-between">
    <div class="col-4 text-left text-info">
      <p class="font-weight-bold"><i><%= price(booking) %>
      <%= currency(booking) %></i></p>
    </div>
    <div class="col-4 text-center">
      <%= button_to t("bookings.shared.pay_now"), checkout_index_path,
                                                  params: {id: booking.id},
                                                  method: :post,
                                                  remote: true,
                                                  class: "btn btn-sm btn-primary btn-helper" %>
    </div>
    <div class="col-4 text-right">
      <%= link_to t("bookings.index.cancel"), booking, method: :delete,
                                              class: "btn btn-sm btn-danger btn-helper",
                                              data: {confirm: t("bookings.index.confirm")} %>
    </div>
  </div>
</div>
