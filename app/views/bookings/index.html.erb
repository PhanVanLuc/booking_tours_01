<% provide(:title, t("global.bookings")) %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 mb-2">
    <% if @bookings.any? %>
      <div class="card p-3 collect">
        <%= render @bookings %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-2">
      <p class="text-left ml-3">
        <strong><%= t "bookings.index.total" %></strong>
      </p>
    </div>
    <div class="col-md-6 mb-2">
      <p class="text-right mr-3">
        <strong><%= total_price(@bookings) %></strong>
      </p>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-12 mb-2">
      <div class="row">
        <div class="col-sm-12  col-md-6">
          <%= link_to t("bookings.index.continue"), tours_path, class: "btn btn-block btn-light" %>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
          <%= link_to t("bookings.index.pay"), checkout_index_path,
                                              method: :post,
                                              remote: true,
                                              class: "btn btn-lg btn-block btn-success text-uppercase" %>
        </div>
      </div>
    </div>
  </div>
</div>