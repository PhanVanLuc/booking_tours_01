<%= form_with(model: @tour, local: true) do |f|%>
  <%= render "shared/error_messages", object: f.object %>
      
  <%= f.label :tour_name %>
  <%= f.text_field :tour_name, class: "form-control" %>

  <div class="field mt-3 mb-2">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, accept: "image/jpeg,image/gif,image/png", class: "pl-3"%>
  </div>
      
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: t("tour.new.compose"), class: "form-control" %>
  
  <%= f.label :tour_amount %>
  <%= f.text_field :tour_amount, class: "form-control" %>
  
  <%= f.label :date_begin %>
  <%= f.date_field :date_begin, class: "form-control" %>
  
  <%= f.label :date_end %>
  <%= f.date_field :date_end, class: "form-control" %>
      
  <%= f.label :price %> 
  <%= f.text_field :price, class: "form-control" %>
      
  <%= f.submit yield(:button_label), class: "btn btn-primary mt-4" %>
<% end %>