<%= form_with(model: @tour, local: true) do |f|%>
  <%= render "shared/error_messages", object: f.object %>
      
  <%= f.label :tour_name %>
  <%= f.text_field :tour_name, class: "form-control" %>
      
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  
  <%= f.label :status %>
  <%= f.text_field :status, class: "form-control" %>
  
  <%= f.label :tour_amount %>
  <%= f.text_field :tour_amount, class: "form-control" %>
  
  <%= f.label :date_begin %>
  <%= f.date_field :date_begin, class: "form-control" %>
  
  <%= f.label :date_end %>
  <%= f.date_field :date_end, class: "form-control" %>
      
  <%= f.label :price %> 
  <%= f.text_field :price, class: "form-control" %>
      
  <%= f.submit yield(:button_label), class: "btn btn-primary mt-4" %>
<% end %>