<div class="col-md-12 col-lg-12">
  <article class="post vt-post">
    <div class="row">
      <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
        <div class="post-type post-img">
          <%= link_to image_tag("place1.png", class:"img-responsive", alt:"image post")%>
        </div> 
        <div class="author-info author-info-2">
          <ul class="list-inline">
            <li>
              <div class="info">
                <p><%=t("review.review.posted")%> <span><%=review.created_at%></span></p>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
        <div class="caption">
          <h3 class="md-heading"><%=link_to review.review_name, review_path(review.id)%></h3>
          <p style="display: -webkit-box;-webkit-line-clamp: 4;-webkit-box-orient: vertical;overflow: hidden;"><%=review.review_content%></p>
          <%=link_to t("review.review.readmore"), review_path(review.id), class:"btn btn-default", role:"button"%>
        </div>
        <div>
          <%= link_to t('review.edit.update'), edit_review_path(review.id), {class:"btn btn-danger"} %>
          <%= link_to t('review.edit.delete'), review, method: :delete, data: { confirm: "You sure?" } ,class:"btn btn-danger"%>
        </div>
      </div>
    </div>
  </article>
  <div class="clearfix">
  </div>
</div>