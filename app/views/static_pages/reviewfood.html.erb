<% provide(:title, "Review") %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="section-title ">
        <h3><%=t("review.review.foodreview")%></h3>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <%for i in 0..5 %>
      <div class="col-md-12 col-lg-12">
        <article class="post vt-post">
          <div class="row">
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
              <div class="post-type post-img">
                <%= link_to image_tag("place1.png", class:"img-responsive", alt:"image post")%>
              </div> 
              <div class="author-info author-info-2">
                <ul class="list-inline">
                  <li>
                    <div class="info">
                      <p><%=t("review.review.posted")%> <span>Mar 21, 2021</span></p>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
              <div class="caption">
                <h3 class="md-heading"><%=link_to t("review.review.name")%></h3>
                <p><%=t("review.review.content")%></p>
                <%=link_to t("review.review.readmore"), "#", class:"btn btn-default", role:"button"%>
              </div>
            </div>
          </div>
        </article>
        <div class="clearfix">
        </div>
      </div>
    <%end%>
  </div>
</div>
