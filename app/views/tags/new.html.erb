<% provide(:title, t("tag.tag.createbtn")) %>
<% provide(:button_label, t("tag.tag.createbtn")) %>
<div class="container">
  <div class="row d-flex justify-content-center">
    <h3>Create Tag</h3>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with(model: @tag, local: true, class:"bg-white col-lg-9") do |f| %>
      <%= render "shared/error_messages", object: f.object %>   
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>  
      <%= f.submit yield(:button_label), class: "btn btn-primary mt-4" %>
    <% end %>
  </div>
</div>