<% provide(:title, "Tour") %>
<div class=container>
  <div class="search mt-2">
    <div class="container">
      <div class=" row  p-3 d-flex justify-content-center">
        <div class="col-lg-3">
          <h3 style="font-size: 22px; font-weight: 400"><%=t("staticpages.home.where")%></h3>
        </div>
        <div class="col-lg-9">
          <%= form_tag(tours_path, method: :get) do %>
            <div class="form-row">
              <div class="col">
                <%= text_field_tag :term, params[:term], class:"form-control"%>
              </div>
              <%= submit_tag t("staticpages.home.search"), class:"btn btn-danger" %>
            </div>
          <% end %>
        </div>		
      </div>
    </div>
  </div>
  <div class=row d-flex justify-content-center>
    <% if @tours.size==0%>
      <div class="col-lg-12 text-center">
        <h3><%=t("tour.tour.searchalert")%></h3>
      </div>
    <%else%>
      <div class="section-content section-place mt-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-6">
              <div class="section-title text-center">
                <h3><%=t("tour.tour.tourlist")%></h3>
              </div>
            </div>
          </div>
          <div class=row>
          <%= will_paginate @collection, :previous_label => "<i class='fas fa-arrow-left'></i>" + t("global.previous"),
                                         :next_label => t("global.next") + "<i class='fas fa-arrow-right'></i>",
                                         class: "ml-auto" %>
          </div>
          <div class="row">
            <% @tours.each do |tour| %>
              <div class="col-lg-4">
                <div class="place">
                  <div class="thumb">
                    <%= link_to image_tag("place1.png")%>
                    <%= link_to "$500", "#", class:"price"%>          
                  </div>
                  <div class="place-content">
                    <%= link_to "#" do %>
                      <h3><%=tour.tour_name%></h3>
                    <% end %>
                    <p>United State of America</p>
                    <div class="rating d-flex justify-content-between">
                      <span>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                      </span>
                      <div class="days">
                        <i class="fa fa-clock-o"></i>
                        <%= link_to ("5 "+t("staticpages.home.day")), "#"%>
                      </div>
                    </div>
                  </div>
                </div>	
              </div>
            <% end %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>