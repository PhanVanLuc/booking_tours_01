<% provide(:title, t("users.edit.title")) %>
<% provide(:button_label, t("users.edit.save")) %>
<div class="container bg-light">
  <div class="row d-flex justify-content-center"> 
    <h1><%= t "users.edit.update" %></h1>
  </div>
  <div class="row d-flex justify-content-center"> 
    <div class="col-md-6 col-md-offset-3">
      <%= render 'layouts/form' %>
      <div class="gravatar_edit mt-2">
        <%= gravatar_for @user %>
        <a href="https://gravatar.com/emails" target="_blank" rel="noopener"><%= t "users.edit.change" %></a>
      </div>
    </div>
  </div>
</div>